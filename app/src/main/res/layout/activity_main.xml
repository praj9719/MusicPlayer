<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/activity_main_image_view"
        android:src="@drawable/back_def"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/activity_main_card_view_refresh"
        android:layout_width="250dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@drawable/icon_repeat"
                    android:layout_width="match_parent"
                    android:text="Repeat same song"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableLeft="@drawable/icon_random"
                    android:layout_width="match_parent"
                    android:text="Shuffle playlist"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableLeft="@drawable/icon_alarm"
                    android:layout_width="match_parent"
                    android:text="Timer"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableLeft="@drawable/icon_list"
                    android:layout_width="match_parent"
                    android:text="Categories"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/activity_main_text_view_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textSize="25dp"
                    android:text="OK"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:background="@color/cardview_shadow_start_color"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="7.5">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <Button
                    android:padding="5dp"
                    android:id="@+id/activity_main_button_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_list" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/activity_main_text_view_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <Button
                    android:padding="5dp"
                    android:id="@+id/activity_main_button_alarm"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_alarm" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/activity_main_linear_layout_timer_outer"
                android:background="@color/cardview_shadow_start_color"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="TIMER"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:id="@+id/activity_main_linear_layout_timer_inner"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/activity_main_edit_text_timer"
                        android:hint="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="minutes"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:enabled="false"
                        android:id="@+id/activity_main_button_timer_start_pause"
                        android:layout_width="wrap_content"
                        android:background="@null"
                        android:textColor="@color/colorGray"
                        android:text="Start"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginHorizontal="20dp"
                        android:background="@null"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/activity_main_button_timer_reset"
                        android:layout_width="wrap_content"
                        android:text="Set"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/activity_main_button_timer_cancel"
                        android:background="@null"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:text="Exit"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/activity_main_text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:gravity="center"
                android:text="Title"
                android:layout_marginVertical="10dp"
                android:textColor="#fff"
                android:textSize="25dp"/>
            <ListView
                android:id="@+id/activity_main_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="30dp"
                android:fillViewport="false"
                android:requiresFadingEdge="vertical">
            </ListView>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <SeekBar
                    android:layout_alignParentTop="true"
                    android:id="@+id/activity_main_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/activity_main_text_view_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_main_seek_bar"
                    android:layout_margin="5dp"
                    android:text="00:00"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/activity_main_text_view_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_main_seek_bar"
                    android:layout_margin="5dp"
                    android:text="00:00"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"/>
                <Button
                    android:id="@+id/activity_main_button_pause"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/activity_main_seek_bar"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/icon_pause"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerHorizontal="true"/>
                <Button
                    android:id="@+id/activity_main_button_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_next"
                    android:layout_toRightOf="@+id/activity_main_button_pause"
                    android:layout_marginTop="55dp" />
                <Button
                    android:id="@+id/activity_main_button_previous"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_previous"
                    android:layout_toLeftOf="@+id/activity_main_button_pause"
                    android:layout_marginTop="55dp" />
                <Button
                    android:id="@+id/activity_main_button_shuffle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_random"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"/>
                <Button
                    android:id="@+id/activity_main_button_looping"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_repeat"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="55dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>